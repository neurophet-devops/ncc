{
    "mcpServers": {
        "context7": {
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp",
                "--api-key",
                "$CONTEXT7_API_KEY"
            ]
        },
        "ado": {
            "command": "npx",
            "args": [
                "-y",
                "@azure-devops/mcp",
                "neurophet",
                "--authentication",
                "envvar"
            ],
            "env": {
                "ADO_MCP_AUTH_TOKEN": "$AZURE_DEVOPS_PAT"
            }
        }
    }
}
