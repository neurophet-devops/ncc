{
    "mcpServers": {
        "context7": {
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp",
                "--api-key",
                "$CONTEXT7_API_KEY"
            ]
        },
        "azure-devops": {
            "command": "npx",
            "args": [
                "-y",
                "@azure-devops/mcp@latest",
                "neurophet",
                "--authentication",
                "pat"
            ],
            "env": {
                "ADO_PAT": "$ADO_PAT"
            }
        }
    }
}